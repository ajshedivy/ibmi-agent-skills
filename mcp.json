{
  "mcpServers": {
    "ibmi-mcp-server": {
      "command": "npx",
      "args": ["-y", "@ibm/ibmi-mcp-server@latest"],
      "env": {
        "NODE_OPTIONS": "--no-deprecation",
        "DB2i_HOST": "your-hostname.com",
        "DB2i_USER": "your-username",
        "DB2i_PASS": "your-password",
        "DB2i_PORT": "8076",
        "MCP_TRANSPORT_TYPE": "stdio",
        "IBMI_ENABLE_EXECUTE_SQL": "true"
      }
    }
  }
}